<odoo>
  <data>
    <record id="view_my_custom_item_tree" model="ir.ui.view">
      <field name="name">my.custom.item.tree</field>
      <field name="model">my.custom.item</field>
      <field name="arch" type="xml">
        <list class="o_my_custom_app_list o_my_custom_items_tree o_my_custom_card">
          <field name="name"/>
          <field name="state"/>
        </list>
      </field>
    </record>

    <record id="view_my_custom_item_search" model="ir.ui.view">
      <field name="name">my.custom.item.search</field>
      <field name="model">my.custom.item</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="state"/>
        </search>
      </field>
    </record>

    <record id="view_my_custom_item_form" model="ir.ui.view">
      <field name="name">my.custom.item.form</field>
      <field name="model">my.custom.item</field>
      <field name="arch" type="xml">
        <form class="o_my_custom_app_form">
          <header>
            <button
              name="action_mark_done"
              type="object"
              string="Mark Done"
              class="btn o_my_custom_app_btn o_my_custom_app_btn--done"
            />
            <button
              name="action_reset_to_draft"
              type="object"
              string="Reset to Draft"
              class="btn o_my_custom_app_btn o_my_custom_app_btn--reset"
            />
            <button
              name="action_toggle_active"
              type="object"
              string="Archive"
              class="btn o_my_custom_app_btn o_my_custom_app_btn--archive"
            />
            <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
          </header>
          <sheet>
            <div class="o_my_custom_app_card">
              <group>
                <field name="name"/>
                <field name="description"/>
              </group>
            </div>
            <div class="o_my_custom_app_empty"/>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_my_custom_item" model="ir.actions.act_window">
      <field name="name">My Custom Items</field>
      <field name="res_model">my.custom.item</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_my_custom_app_root" name="My Custom App"/>
    <menuitem
      id="menu_my_custom_item"
      name="My Custom Items"
      parent="menu_my_custom_app_root"
      action="action_my_custom_item"
    />
  </data>
</odoo>
