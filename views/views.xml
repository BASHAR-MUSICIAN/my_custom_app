<odoo>
  <data>
    <record id="view_my_custom_item_tree" model="ir.ui.view">
      <field name="name">my.custom.item.tree</field>
      <field name="model">my.custom.item</field>
      <field name="arch" type="xml">
        <list class="my_custom_app_list_view">
          <field name="name"/>
          <field name="state"/>
        </list>
      </field>
    </record>

    <record id="view_my_custom_item_search" model="ir.ui.view">
      <field name="name">my.custom.item.search</field>
      <field name="model">my.custom.item</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="state"/>
          <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
          <filter name="done" string="Done" domain="[('state','=','done')]"/>
        </search>
      </field>
    </record>

    <record id="view_my_custom_item_kanban" model="ir.ui.view">
      <field name="name">my.custom.item.kanban</field>
      <field name="model">my.custom.item</field>
      <field name="arch" type="xml">
        <kanban class="my_custom_app_kanban_view" default_group_by="state">
          <field name="name"/>
          <field name="description"/>
          <field name="state"/>
          <templates>
            <t t-name="kanban-box">
              <div class="o_kanban_record my_custom_app_kanban_card">
                <div class="my_custom_app_kanban_header">
                  <strong class="my_custom_app_kanban_title">
                    <field name="name"/>
                  </strong>
                  <field name="state" widget="badge" class="my_custom_app_state_badge"/>
                </div>
                <div class="my_custom_app_kanban_description">
                  <field name="description"/>
                </div>
                <div class="my_custom_app_kanban_actions">
                  <button
                    name="action_mark_done"
                    type="object"
                    string="Mark Done"
                    class="btn btn-sm my_btn_primary"
                  />
                  <button
                    name="action_reset_to_draft"
                    type="object"
                    string="Reset Draft"
                    class="btn btn-sm my_btn_secondary"
                  />
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record id="view_my_custom_item_form" model="ir.ui.view">
      <field name="name">my.custom.item.form</field>
      <field name="model">my.custom.item</field>
      <field name="arch" type="xml">
        <form class="my_custom_app_form_view">
          <header>
            <button
              name="action_mark_done"
              type="object"
              string="Mark Done"
              class="btn my_btn_primary"
            />
            <button
              name="action_reset_to_draft"
              type="object"
              string="Reset to Draft"
              class="btn my_btn_secondary"
            />
            <button
              name="action_toggle_active"
              type="object"
              string="Archive"
              class="btn my_btn_danger"
            />
            <field
              name="state"
              widget="statusbar"
              statusbar_visible="draft,done"
              class="my_custom_app_statusbar"
            />
          </header>
          <sheet>
            <div class="my_custom_app_form_card">
              <div class="my_custom_app_form_summary">
                <div class="my_custom_app_form_summary_left">
                  <field
                    name="name"
                    placeholder="Item name"
                    class="my_custom_app_title_field"
                  />
                </div>
                <div class="my_custom_app_form_summary_right">
                  <field name="state" widget="badge" class="my_custom_app_state_badge"/>
                </div>
              </div>
              <group class="my_custom_app_form_groups" col="2">
                <group class="my_custom_app_form_left">
                  <field name="description" placeholder="Add a short description..."/>
                </group>
                <group class="my_custom_app_form_right">
                  <field name="state" widget="badge" class="my_custom_app_state_badge"/>
                  <field name="write_date" readonly="1"/>
                </group>
              </group>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_my_custom_item" model="ir.actions.act_window">
      <field name="name">My Custom Items</field>
      <field name="res_model">my.custom.item</field>
      <field name="view_mode">kanban,list,form</field>
      <field name="context">{'group_by': 'state'}</field>
    </record>

    <menuitem id="menu_my_custom_app_root" name="My Custom App"/>
    <menuitem
      id="menu_my_custom_item"
      name="My Custom Items"
      parent="menu_my_custom_app_root"
      action="action_my_custom_item"
    />
  </data>
</odoo>
