<odoo>
  <data>
    <record id="view_pos_order_form_inherit_my_custom_app" model="ir.ui.view">
      <field name="name">pos.order.form.inherit.my_custom_app</field>
      <field name="model">pos.order</field>
      <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
          <button
            name="action_create_sale_order"
            type="object"
            string="Create Sales Order"
            class="btn btn-primary"
          />
        </xpath>
        <xpath expr="//sheet//group" position="inside">
          <field name="x_sale_order_id"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
